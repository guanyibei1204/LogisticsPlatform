<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:background="#eeeeee"
    >

    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="52dip"
        android:background="@drawable/ic_tabs_bg"
        >
         
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:text="@string/profile_title"
                android:textSize="18dip"
                style="@style/titleTextStyle"
                />
       
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_layout"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        	<TableLayout
                    android:id="@+id/profile_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="24dip" >
            	<TableRow android:layout_width="match_parent"
                    android:background="#ffffff">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/usr_name"
                            android:textColor="#455369"
                            android:gravity="center"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/usr_name"
                            android:layout_width="150dip"
                            android:layout_height="45dip"
                            android:gravity="center"
                            android:textSize="20sp" />
                </TableRow>
                
            	<TableRow android:layout_width="match_parent"
                    android:background="#ffffff"
                    android:layout_marginTop="2dp"
                    >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="#455369"
                            android:text="@string/phone"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/phone"
                            android:gravity="center"
                            android:layout_width="150dp"
                            android:layout_height="45dip"
                            android:textSize="20sp" />
                </TableRow>

                <Button
                    android:id="@+id/favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_marginTop="10dip"
                    android:textColor="#455369"
                    android:background="#ffffff"
                    android:text="@string/myfavorite"
                    android:textSize="20sp" />


            	<Button
            	    		android:id="@+id/pushlist"
                            android:layout_width="wrap_content"
                    android:layout_marginTop="10dip"
                    android:background="#ffffff"
                    android:textColor="#455369"
                            android:layout_height="45dip"
                            android:text="@string/pushlist"
                            android:textSize="20sp" />
            	
            	<TableRow android:layout_width="match_parent"
            	   		  android:layout_height="45dip"
                    android:layout_marginTop="2dip"
                    android:background="#ffffff"
                    >

            		<TextView
            		    android:layout_width="wrap_content"
            		    android:layout_height="45dip"
            		    android:text="@string/refreshtime"
                        android:textColor="#455369"
                        android:gravity="center_vertical"
            		    android:textSize="20sp" />

                        <Spinner 
            	    		android:id="@+id/refreshtime"
                            android:layout_marginLeft="3dip"
                            android:layout_width="fill_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_height="40dip"
                            android:textColor="#455369"
                            android:background="@drawable/spinner_bg"
            	    />
                        <Button
            	    		android:id="@+id/submit"
                            android:layout_width="45dip"
                            android:layout_height="30dip"
                            android:layout_marginLeft="3dip"
                            android:layout_gravity="center_vertical"
                            android:text="@string/submit"
                            android:background="#ff9700"
                            android:textColor="#ffffff"
                            android:textSize="20sp" />
                </TableRow>
            	
            	
                <Button
                    android:id="@+id/change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="45dip"
                    android:layout_marginTop="10dip"
                    android:background="#ffffff"
                    android:textColor="#455369"
                    android:text="@string/change_password"
                    android:textSize="20sp" />

                <Button
            	    		android:id="@+id/logout"
                    android:layout_marginTop="20dip"
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:background="#ff9700"
                            android:text="@string/logout"

                    android:textColor="#ffffff"
                            android:textSize="20sp" />
            	
            	
        	</TableLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
