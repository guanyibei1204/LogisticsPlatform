<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#eeeeee"
    android:gravity="center_horizontal"

    >


    <RelativeLayout
        android:id="@+id/title_layout"
        android:layout_width="fill_parent"
        android:layout_height="52dip"
        android:background="@drawable/ic_tabs_bg"
        >
         <Button
             android:id="@+id/return_btn"
             android:layout_width="50dip"
             android:layout_height="25dip"
             android:layout_centerVertical="true"
             android:textColor="#ffffff"
             android:text="@string/button_return"
             android:layout_alignParentLeft="true"
             android:layout_marginLeft="5dip"
             android:background="@drawable/ic_button_return"
            />

            <!-- <Button
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:textColor="#FFFFFF"
            android:background="@drawable/ic_button_3"
            /> -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dip"
                 android:text="@string/change_password"
                style="@style/titleTextStyle"
                />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/title_layout"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
             android:orientation="vertical"
            >
            
           <TableLayout
                    android:id="@+id/profile_top"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="24dip" >
            	<TableRow android:layout_width="match_parent"
                    android:background="@drawable/ic_round_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:paddingLeft="10dip"
                            android:text="@string/old_password"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/old_password"
                            android:layout_width="150dp"
                            android:layout_height="45dip"
                            android:ems="10"
                            android:background="@null"
                            android:inputType="textWebPassword" />

                </TableRow>
                
            	<TableRow android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_round_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:paddingLeft="10dip"
                            android:text="@string/new_password"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/new_password"
                            android:layout_width="150dp"
                            android:layout_height="45dip"
                            android:ems="10"
                            android:background="@null"
                            android:inputType="textWebPassword"/>
                </TableRow>
                
            	<TableRow android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@drawable/ic_round_bg">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="45dip"
                            android:paddingLeft="10dip"
                            android:text="@string/confirm"
                            android:textSize="20sp" />

                        <EditText
                            android:id="@+id/confirm"
                            android:layout_width="150dp"
                            android:layout_height="45dip"
                            android:ems="10"
                            android:background="@null"
                            android:inputType="textWebPassword" />
                </TableRow>
            	
            	            	
            	<Button
            	    		android:id="@+id/submit"
                    android:layout_marginTop="24dp"
                            android:layout_width="wrap_content"
                            android:text="@string/confirm1"
                            android:layout_height="45dip"
                    		android:layout_gravity="center_horizontal"
                    android:background="#ff9700"
                    android:textColor="#ffffff"
                    		android:layout_weight="1"
                            android:textSize="20sp" />
            	
            	
        	</TableLayout>
            
                
        </LinearLayout>
    </ScrollView>


</RelativeLayout>
